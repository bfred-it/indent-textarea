{
	"name": "indent-textarea",
	"version": "1.0.4",
	"description": "Add editor-like tab-to-indent functionality to <textarea>, in a few bytes",
	"keywords": [
		"editor",
		"indent",
		"indentation",
		"tab",
		"text area"
	],
	"repository": "fregante/indent-textarea",
	"license": "MIT",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepare": "tsc",
		"test": "run-s --silent prepare test:*",
		"test:blink": "browserify test.js | tape-run",
		"test:gecko": "if [ $GITHUB_ACTION ]; then browserify test.js | tape-run --browser firefox; fi",
		"test:lint": "xo",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"extensions": [
			"ts"
		],
		"overrides": [
			{
				"files": "**/*.ts",
				"extends": "xo-typescript"
			}
		]
	},
	"dependencies": {
		"insert-text-textarea": "^1.0.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.3.0",
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"@typescript-eslint/parser": "^1.13.0",
		"browserify": "^16.2.2",
		"eslint-config-xo-typescript": "^0.9.0",
		"npm-run-all": "^4.1.3",
		"tape": "^4.10.1",
		"tape-run": "^5.0.0",
		"typescript": "^3.3.3333",
		"xo": "*"
	}
}
