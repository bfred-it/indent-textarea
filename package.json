{
	"name": "indent-textarea",
	"version": "1.0.4",
	"description": "Add editor-like tab-to-indent functionality to <textarea>, in a few bytes",
	"keywords": [
		"editor",
		"indent",
		"indentation",
		"tab",
		"text area"
	],
	"repository": "fregante/indent-textarea",
	"license": "MIT",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepare": "tsc",
		"test": "run-s --silent prepare test:*",
		"test:blink": "browserify -p esmify tests/* | tape-run",
		"test:gecko": "browserify -p esmify tests/* | tape-run --browser firefox",
		"test:lint": "xo",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"extensions": [
			"ts"
		],
		"overrides": [
			{
				"files": "**/*.ts",
				"extends": "xo-typescript"
			}
		]
	},
	"dependencies": {
		"insert-text-textarea": "^2.0.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.6.0",
		"@typescript-eslint/eslint-plugin": "^2.11.0",
		"@typescript-eslint/parser": "^2.11.0",
		"browserify": "^16.2.2",
		"eslint-config-xo-typescript": "^0.23.0",
		"esmify": "^2.1.1",
		"npm-run-all": "^4.1.3",
		"tape": "^4.10.1",
		"tape-run": "^6.0.1",
		"typescript": "^3.3.3333",
		"xo": "*"
	},
	"type": "module"
}
